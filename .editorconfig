# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,json}]
indent_size = 2

[CMakeLists.txt]
indent_size = 2

[*.cmake]
indent_size = 2

[Makefile]
indent_style = tab
