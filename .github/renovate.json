{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enablePreCommit"
  ],
  "prHourlyLimit": 0,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "optionalDependencies"
      ],
      "addLabels": [
        "optional"
      ]
    },
    {
      "matchFileNames": [
        "\\.vcpkg\\.json$"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update vcpkg.json registration port with git hash",
      "fileMatch": [
        "\\.vcpkg\\.json$"
      ],
      "matchStrings": [
        "\\s+\"version-string\":\\s+\"(?<currentDigest>.*?)\""
      ],
      "currentValueTemplate": "master",
      "depNameTemplate": "vcpkg-port",
      "packageNameTemplate": "https://github.com/ObKo/stm32-cmake",
      "datasourceTemplate": "git-refs"
    }
  ],
  "timezone": "Asia/Shanghai"
}
