vcpkg_from_github(
  OUT_SOURCE_PATH
  SOURCE_PATH
  REPO
  StableCoder/cmake-scripts
  REF
  ${VERSION}
  SHA512
  72d13852cd081a28f877cd8b36b5fb16d8a475ec9eb9ac7d03d2634a5b9acbdec8369ac797b4de7e2fb842f0c72f2f20e484c31c51ce7b27570cde20c184e5f2
